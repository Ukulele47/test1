<?xml version="1.0" standalone="no" ?>
<!-- this is a mtp-target gui resource -->
<resource>
	<object class="CGuiFrame" name="loginFrame">
		<alignment>eAlignCenterHorizontal|eAlignCenterVertical</alignment>
		<minSize>0,0</minSize>
		<position>-220,120</position>
		<element>
			<object class="CGuiVBox">
				<alignment>eAlignExpandHorizontal|eAlignExpandVertical</alignment>
				<element>
          <object class="CGuiHBox">
						<alignment>eAlignExpandHorizontal|eAlignCenterVertical</alignment>
						<element>
							<object class="CGuiText" name="loginText">
								<alignment>eAlignLeft|eAlignCenterVertical</alignment>
								<string>GuiLogin</string>
							</object>
							<object class="CGuiText" name="loginEntry">
								<alignment>eAlignRight|eAlignCenterVertical</alignment>
								<minSize>100,0</minSize>
								<isMultiline>false</isMultiline>
								<isEntry>true</isEntry>
								<isEditable>true</isEditable>
								<string></string>
							</object>
						</element>
					</object>
					<object class="CGuiHBox">
						<alignment>eAlignExpandHorizontal|eAlignCenterVertical</alignment>
						<element>
							<object class="CGuiText" name="passwordText">
								<alignment>eAlignLeft|eAlignCenterVertical</alignment>
								<string>GuiPassword</string>
							</object>
							<object class="CGuiText" name="passwordEntry">
								<alignment>eAlignRight|eAlignCenterVertical</alignment>
								<minSize>100,0</minSize>
								<isMultiline>false</isMultiline>
								<isEntry>true</isEntry>
								<isEditable>true</isEditable>
								<isPassword>true</isPassword>
								<string></string>
							</object>
						</element>
					</object>
					<object class="CGuiHBox">
						<alignment>eAlignExpandHorizontal|eAlignBottom</alignment>
						<element>
							<object class="CGuiButton" name="bLogin">
								<minSize>80,0</minSize><element><object class="CGuiText"><string>GuiConnect</string></object></element>
							</object>
						</element>
					</object>
          <object class="CGuiSpacer">
            <minHeight>10</minHeight>
          </object>
          <object class="CGuiButton" name="bRegister">
            <minSize>200,0</minSize><element><object class="CGuiText"><string>GuiCreateAccount</string></object></element>
          </object>
          <object class="CGuiButton" name="bLostPassword">
            <minSize>200,0</minSize><element><object class="CGuiText"><string>GuiForgotPassword</string></object></element>
          </object>
          <object class="CGuiSpacer">
            <minHeight>10</minHeight>
          </object>
          <object class="CGuiButton" name="bHowToPlay">
            <minSize>200,0</minSize><element><object class="CGuiText"><string>GuiHowToPlay</string></object></element>
          </object>
          <object class="CGuiButton" name="bSettings">
            <minSize>200,0</minSize><element><object class="CGuiText"><string>GuiChangeSettings</string></object></element>
          </object>
          <object class="CGuiButton" name="bExit">
            <minSize>200,0</minSize><element><object class="CGuiText"><string>GuiExit</string></object></element>
          </object>
        </element>
			</object>
		</element>
	</object>
</resource>

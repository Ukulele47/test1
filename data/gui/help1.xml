<?xml version="1.0" standalone="no" ?>
<!-- this is a mtp-target gui resource -->
<resource>
  <object class="CGuiFrame" name="help1Frame">
    <minSize>300,300</minSize>
    <position>0,0</position>
    <alignment>eAlignCenterHorizontal|eAlignCenterVertical</alignment>
    <element>
      <object class="CGuiVBox">
        <alignment>eAlignUp|eAlignLeft</alignment>
        <element>

          <object class="CGuiBitmap"><minSize>256,128</minSize><filename>scheme.tga</filename></object>

          <object class="CGuiSpacer"><minHeight>10</minHeight></object>

          <object class="CGuiText"><alignment>eAlignLeft</alignment><string>HelpExpl</string></object>
          
          <object class="CGuiSpacer"><minHeight>10</minHeight></object>
          <object class="CGuiText"><alignment>eAlignLeft</alignment><string>HelpExpl1</string></object>

          <object class="CGuiSpacer"><minHeight>10</minHeight></object>
          <object class="CGuiText"><alignment>eAlignLeft</alignment><string>HelpExpl2</string></object>

          <object class="CGuiSpacer"><minHeight>10</minHeight></object>
          <object class="CGuiText"><alignment>eAlignLeft</alignment><string>HelpExpl3</string></object>
          
          <object class="CGuiSpacer"><minHeight>10</minHeight></object>
          <object class="CGuiText"><string>HelpOpenHelp</string></object>
          <object class="CGuiHBox">
            <alignment>eAlignCenterHorizontal|eAlignCenterVertical</alignment>
            <element>
              <object class="CGuiButton" name="bClose">
                <element><object class="CGuiText"><string>GuiClose</string></object></element>
              </object>
              <object class="CGuiButton" name="bNext">
                <minSize>100,0</minSize><element><object class="CGuiText"><string>GuiNext</string></object></element>
              </object>
            </element>
          </object>

        </element>
      </object>
    </element>
  </object>
</resource>
